{
  "branches": ["master", "main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {"type": "BREAK", "release": "major"},
          {"type": "FEAT", "release": "minor"},
          {"type": "FUNC", "release": "minor"},
          {"type": "FIX", "release": "patch"},
          {"type": "DOCS", "release": "patch"},
          {"type": "STYLE", "release": "patch"},
          {"type": "TEST", "release": "patch"},
          {"type": "CI", "release": "patch"},
          {"type": "DEPEN", "release": "patch"},
          {"type": "ESLINT", "release": "patch"},
          {"type": "FILES", "release": "patch"},
          {"type": "DB", "release": "patch"},
          {"type": "REFACTOR", "release": "patch"},
          {"type": "LINT", "release": "patch"}
        ],
        "parserOpts": {
          "headerPattern": "^(\\w+)\\s+\\(([^)]+)\\)\\s+(.+)$",
          "headerCorrespondence": ["type", "scope", "subject"],
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAK"],
          "revertPattern": "^Revert\\s\"([\\s\\S]*)\"\\s*This reverts commit (\\w*)\\.?$",
          "revertCorrespondence": ["header", "hash"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "parserOpts": {
          "headerPattern": "^(\\w+)\\s+\\(([^)]+)\\)\\s+(.+)$",
          "headerCorrespondence": ["type", "scope", "subject"]
        },
        "writerOpts": {
          "groupBy": "type",
          "commitGroupsSort": "title",
          "commitsSort": ["scope", "subject"],
          "noteGroupsSort": "title"
        },
        "presetConfig": {
          "types": [
            {"type": "BREAK", "section": "‚ö†Ô∏è Breaking Changes", "hidden": false},
            {"type": "FEAT", "section": "‚ú® Features", "hidden": false},
            {"type": "FUNC", "section": "üîß Functionality Changes", "hidden": false},
            {"type": "FIX", "section": "üêõ Bug Fixes", "hidden": false},
            {"type": "DOCS", "section": "üìö Documentation", "hidden": false},
            {"type": "STYLE", "section": "üíé Styles", "hidden": false},
            {"type": "REFACTOR", "section": "‚ôªÔ∏è Code Refactoring", "hidden": false},
            {"type": "TEST", "section": "‚úÖ Tests", "hidden": false},
            {"type": "CI", "section": "‚öôÔ∏è Continuous Integration", "hidden": false},
            {"type": "DEPEN", "section": "üì¶ Dependencies", "hidden": false},
            {"type": "ESLINT", "section": "üîç Code Style", "hidden": false},
            {"type": "FILES", "section": "üìÅ File Structure", "hidden": false},
            {"type": "DB", "section": "üóÑÔ∏è Database", "hidden": false},
            {"type": "LINT", "section": "üîç Code Style", "hidden": false}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}