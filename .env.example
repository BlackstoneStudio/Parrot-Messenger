# Parrot Messenger Environment Variables
# Copy this file to .env and fill in your credentials

# Email Services

## AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

## Mailchimp (Mandrill)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_FROM_EMAIL=noreply@yourdomain.com

## Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@mg.yourdomain.com

## SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

## SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM_EMAIL=your_email@gmail.com

# SMS Services

## AWS SNS
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SNS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SNS_SMS_TYPE=Transactional
AWS_SNS_FROM_NUMBER=+1234567890

## Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

## Telnyx
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_FROM_NUMBER=+1234567890

# Call Services

## Twilio Call
TWILIO_CALL_ACCOUNT_SID=your_twilio_account_sid
TWILIO_CALL_AUTH_TOKEN=your_twilio_auth_token
TWILIO_CALL_FROM_NUMBER=+1234567890

# Template Engine (Optional)
TEMPLATE_BASE_URL=https://api.yourdomain.com/templates